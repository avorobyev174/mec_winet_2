<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/nameFrameObjCreateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameObjCreateDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/nameObjLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Название объекта"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelCreateObjDialogButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Отмена"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/light_light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/createHouseDialogButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/createObjDialogButton"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:background="@android:color/white"
            android:clickable="true"
            android:text="Добавить"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/light_light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="170dp" />

    </LinearLayout>

</LinearLayout>