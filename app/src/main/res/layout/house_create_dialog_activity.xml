<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/typeHouseCreateDialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/winetTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Тип структуры"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/streetFrameHouseCreateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/streetHouseCreateDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/streetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Улица"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/streetNumberFrameHouseCreateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/streetNumberHouseCreateDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/streetNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Номер дома"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/nameFrameHouseCreateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameHouseCreateDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Название объекта"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/coordinateFrameHouseCreateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/coordinateXHouseCreateDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:digits="0123456789."
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/coordinateYHouseCreateDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:digits="0123456789."
                android:ems="10"
                android:inputType="number" />

            <ImageButton
                android:id="@+id/gpsButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:tint="@color/grey"
                app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />
        </LinearLayout>


        <TextView
            android:id="@+id/winetCoordinatesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Местоположение"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelCreateHouseDialogButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Отмена"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/light_light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/createHouseDialogButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/createHouseDialogButton"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:background="@android:color/white"
            android:clickable="true"
            android:text="Добавить"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/light_light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="170dp" />

    </LinearLayout>

</LinearLayout>